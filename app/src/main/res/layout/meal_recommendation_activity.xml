<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".85">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textSize="15sp"
                android:id="@+id/id_meal_type"
                android:layout_marginStart="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:inputType="none"
                android:id="@+id/selected_meal"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#313f9c"
            android:layout_weight=".15"
            android:layout_marginStart="20dp"
            android:id="@+id/save"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/passed_time">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passed Time!!"
                android:textColor="#000"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_above="@+id/image_view"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@mipmap/undraw_time"
                android:layout_centerInParent="true"
                android:contentDescription="wrong time"
                android:id="@+id/image_view"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_view"
                />
        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>